@model List<ShopBridge.ViewModels.UserRoleViewModel>
@{
    var userId = ViewBag.userId;
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="panel">
        <div class="panel-heading">
            Manage User Roles
        </div>
        <div class="panel-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="glyphicon-check" />
                    <label class="control-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>


