@model ShopBridge.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Edit Role</h4>
    </div>
    <div class="panel-body">
        <form method="post">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2">Role ID :</label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2">Role Name :</label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-action="ListRoles" class="btn btn-warning">Cancel</a>
            </div>
        </form>
    </div>

</div>
<div class="panel panel-info">
    <div class="panel-heading">
        <h4>Users in this Role</h4>
    </div>
    <div class="panel-body">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <h5 class="panel-title">@user</h5>
            }
        }
        else
        {
            <h5 class="panel-title">None at the moment</h5>
        }
    </div>
    <div class="panel-footer">
        <a asp-action="EditUsersInRole" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove Users</a>
        <a href="#" class="btn btn-danger">Delete Users</a>
    </div>
</div>
